<h1>Billing</h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Room Type</th>
      <th>Number Of Nights</th>
      <th>Night Rates</th>
      <th>Total Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billings.each do |billing| %>
      <tr>
        <td><%= billing.room_type %></td><br>
        <td><%= billing.number_of_nights %></td>
        <td><%= billing.night_rate %></td>
        <td><%= billing.total_amount %></td>
        <td><%= link_to 'Show', billing %></td>
        <td><%= link_to 'Edit', edit_billing_path(billing) %></td>
        <td><%= link_to 'Destroy', billing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Billing', new_billing_path %>

